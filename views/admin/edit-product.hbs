<section>
  <div class=" container row justify-content-center ">
    <div class="ml-5 col-md-6 bg-light p-5 m-4">
      <h2 class="text-center ">Edit Product</h2>
      
    
        
      <form action="/admin/edit-product" method="post">
      


        <input type="text" name="id" class="invisible" value="{{product._id}}" id="id">
        <br>
       

      

         <label for="">Product Name</label>
        <input type="text" name="productname" class="form-control" value="{{product.productname}}">
        <label for="">Product Description</label>
        <input type="text" name="productdescription" class="form-control" value="{{product.productdescription}}" >
        <label for="">Product Image</label>
        <input type="file" name="productimage" class="form-control" value="{{product.productimage}}" >
        <label for="">Product Price</label>
        <input type="text" name="productprice" class="form-control" value="{{product.productprice}}">
        <label for="">Product Category</label>
        <input type="text" name="productcategory" class="form-control" value="{{product.productcategory}}">

  <button type="submit" class="btn btn-success mt-4">Submit</button>

      </form>
    </div>
  </div>
</section>