<div class="mt-4 px-5 mx-5">
<h2>All Categories</h2>
        <div class="">
            <a href="/admin/add-category" class="btn btn-success my-4">Add Category</a>
        </div>
</div>
<section>
    <div class="container">
        <table class="table mt-5" id="userTable">
            <thead>
                <tr>
                    <th scope="col">name</th>
                    <th scope="col">description</th>
                    <td></td>
                    <td></td>


                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>{{this.categoryname}}</td>
                    <td>{{this.categorydescription}}</td>
                    <td><a href="/admin/edit-category/{{this._id}}" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/delete-category/{{this._id}}" class="confirm btn btn-danger">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>
</section>
<script>

    $(document).ready(function () {
        $('#userTable').DataTable();
    });
    var elems = document.getElementsByClassName('confirm');
    var confirmIt = function (e) {
        if (!confirm('Are you sure?')) e.preventDefault();
    };
    for (var i = 0, l = elems.length; i < l; i++) {
        elems[i].addEventListener('click', confirmIt, false);
    }
 
</script>